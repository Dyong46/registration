{
	"name": "boilerplate",
	"version": "1.0.0",
	"description": "This is a boilerplate for Rely micro services",
	"author": "Rely",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prepare": "husky install",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"gcp-build": "npm run build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "npm run start:prod",
		"prestart:dev": "rimraf dist",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/src/main",
		"lint": "eslint . --fix",
		"lint:nofix": "eslint .",
		"test": "jest --passWithNoTests",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"migration:create": "bash -c 'typeorm migration:create -f dist/src/ormconfig.js -d src/migrations -n $(git branch --show-current)'",
		"migration:generate": "npm run build && bash -c 'typeorm migration:generate -f dist/src/ormconfig.js -d src/migrations -n $(git branch --show-current)'",
		"migration:show": "typeorm migration:show -f dist/src/ormconfig.js",
		"migration:run": "typeorm migration:run -f dist/src/ormconfig.js"
	},
	"dependencies": {
		"@google-cloud/debug-agent": "^5.2.7",
		"@nestjs/common": "^8.0.4",
		"@nestjs/config": "^1.0.1",
		"@nestjs/core": "^8.0.4",
		"@nestjs/mapped-types": "*",
		"@nestjs/platform-express": "^8.0.4",
		"@nestjs/typeorm": "^8.0.1",
		"@plogg-rely/microservices": "^1.1.6",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"mysql2": "^2.2.5",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.2.0",
		"typeorm": "^0.2.34"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.0.2",
		"@nestjs/schematics": "^8.0.2",
		"@nestjs/testing": "^8.0.4",
		"@types/jest": "^26.0.24",
		"@types/node": "^16.4.0",
		"@types/supertest": "^2.0.11",
		"@typescript-eslint/eslint-plugin": "^4.28.4",
		"@typescript-eslint/parser": "^4.28.4",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^7.0.1",
		"jest": "^27.0.6",
		"prettier": "^2.3.2",
		"ts-jest": "^27.0.4",
		"ts-loader": "^9.2.3",
		"ts-node": "^10.1.0",
		"tsconfig-paths": "^3.10.1",
		"typescript": "^4.3.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
