{
	"name": "boilerplate",
	"version": "1.0.0",
	"description": "This is a boilerplate for Rely micro services",
	"author": "Rely",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"ncu": "ncu !typeorm -u",
		"prebuild": "rimraf dist",
		"build": "nest build",
		"gcp-build": "npm run build",
		"start": "npm run start:prod",
		"prestart:dev": "rimraf dist",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node -r dotenv/config dist/src/main",
		"lint": "eslint -c ../.eslintrc.js . --fix",
		"lint:nofix": "eslint -c ../.eslintrc.js .",
		"test": "jest --config .jestrc.js --passWithNoTests",
		"test:watch": "jest --config .jestrc.js --watch",
		"test:cov": "jest --config .jestrc.js --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"migration:create": "bash -c 'typeorm migration:create -f dist/src/ormconfig.js -d src/migrations -n $(git branch --show-current)'",
		"migration:generate": "npm run build && bash -c 'typeorm migration:generate -f dist/src/ormconfig.js -d src/migrations -n $(git branch --show-current)'",
		"migration:show": "typeorm migration:show -f dist/src/ormconfig.js",
		"migration:run": "typeorm migration:run -f dist/src/ormconfig.js",
		"migration:revert": "typeorm migration:revert -f dist/src/ormconfig.js"
	},
	"dependencies": {
		"@google-cloud/debug-agent": "^5.2.8",
		"@nestjs/common": "^8.4.3",
		"@nestjs/config": "^2.0.0",
		"@nestjs/core": "^8.4.3",
		"@nestjs/mapped-types": "*",
		"@nestjs/platform-express": "^8.4.3",
		"@nestjs/typeorm": "^8.0.3",
		"@plogg-rely/microservices": "^3.1.3",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.13.2",
		"dotenv": "^16.0.0",
		"elastic-apm-node": "^3.31.0",
		"mysql2": "^2.3.3",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.5.5",
		"typeorm": "~0.2.45"
	},
	"devDependencies": {
		"@nestjs/cli": "^8.2.4",
		"@nestjs/schematics": "^8.0.9",
		"@nestjs/testing": "^8.4.3",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.23",
		"@types/supertest": "^2.0.12",
		"eslint": "^8.18.0",
		"husky": "^7.0.4",
		"jest": "^27.5.1",
		"ts-jest": "^27.1.4",
		"ts-loader": "^9.2.8",
		"ts-node": "^10.7.0",
		"tsconfig-paths": "^3.14.1",
		"typescript": "^4.6.3"
	}
}
